<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/login_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.efficom.efid.ui.fragment.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/slide_out_right"/>
        <action
            android:id="@+id/login_to_forgot_password"
            app:destination="@id/forgottenPasswordFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.efficom.efid.ui.fragment.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/forgottenPasswordFragment"
        android:name="com.efficom.efid.ui.fragment.ForgottenPasswordFragment"
        android:label="ForgottenPasswordFragment" />
</navigation>
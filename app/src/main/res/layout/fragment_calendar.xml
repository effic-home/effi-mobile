<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/calendar_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/calendar_date_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/calendar_view"
                app:layout_constraintStart_toEndOf="@id/calendar_date_tv"
                app:layout_constraintEnd_toStartOf="@id/calendar_left_button"
                app:layout_constraintTop_toTopOf="@id/calendar_date_tv"
                app:layout_constraintBottom_toBottomOf="@id/calendar_date_tv"/>

            <ImageButton
                android:id="@+id/calendar_left_button"
                app:layout_constraintTop_toTopOf="@id/calendar_date_tv"
                app:layout_constraintBottom_toBottomOf="@id/calendar_date_tv"
                app:layout_constraintEnd_toStartOf="@id/calendar_date_tv" />

            <ImageButton
                android:id="@+id/calendar_right_button"
                app:layout_constraintTop_toTopOf="@id/calendar_left_button"
                app:layout_constraintBottom_toBottomOf="@id/calendar_left_button"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/calendar_linear"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>